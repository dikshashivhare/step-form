<ol class="breadcrumb">
  <li><%= link_to "Step 1", step1_wizard_path %></li>
  <li class="active">Step 2</li>
  <li>Step 3</li>
  <li>Step 4</li>
</ol>

<%= form_for @user_wizard, as: :user_wizard, url: validate_step_wizard_path do |f| %>
  <% if @user_wizard.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user_wizard.errors.count, "error") %> prohibited
        this project from being saved:
      </h2>
      <ul>
        <% @user_wizard.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= hidden_field_tag :current_step, 'step2' %>
  <p>
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </p>

  <p>
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </p>

  

  <%= f.submit 'Continue' %>
<% end %>
